                            foreach (var p in getlistproduct)
                            {
                                <div class="product-item @p.CategoryId">
                                    <div class="product discount product_filter">
                                        <div class="product_image">
                                            <img src="@p.Image" alt="">
                                        </div>
                                        <div class="favorite favorite_left"></div>
                                        <div class="product_info">
                                            <h6 class="product_name"><a href="@Url.Action("Product","Home",new RouteValueDictionary(new {id=@p.Id}))">@p.Name</a></h6>
                                            <div class="product_price">Chất liệu: @p.MadeFrom@*<span>@p.Dimenson</span>*@</div>
                                        </div>
                                    </div>
                                    <div class="red_button add_to_cart_button"><a href="#">Xem chi tiết</a></div>
