        <div class="hidden-top">
            <div class="hidden-top-inner container">
                <div class="row">
                    <div class="span12">
                        <ul>
                            <li><strong>Công ty TNHH Thương mại cơ khí Linh Kiên</strong></li>
                            <li>Địa chỉ: Lô B1 Khu Công Nghiệp Nguyễn Đức Cảnh, thành phố Thái Bình</li>
                            <li>Gọi cho chúng tôi <i class="icon-phone"></i> 0931.585.528</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end toggle top area -->
        <!-- start header -->
        <header>
            <div class="container ">
                <!-- hidden top area toggle link -->
                <div id="header-hidden-link">
                    <a href="#" class="toggle-link" title="Click me you'll get a surprise" data-target=".hidden-top"><i></i>Open</a>
                </div>
                <!-- end toggle link -->
                <div class="row nomargin">
                    <div class="span12">
                        <div class="headnav">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span4">
                        <div class="logo">

                            <span class="lk">
                                <i class="icon-twitter-sign" style="font-size:27px"></i>
                                THIẾT BỊ INOX LINH KIÊN
                            </span>
                            <h1 style="padding-left:20px">Thiết bị Inox sang trọng, chất lượng</h1>
                        </div>
                    </div>
                    <div class="span8">
                        <div class="navbar navbar-static-top">
                            <div class="navigation">
                                <nav>
                                    <ul class="nav topnav">
                                        <li class="dropdown active">
                                            <a href="index.html">TRANG CHỦ </i></a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">SẢN PHẨM <i class="icon-angle-down"></i></a>
                                            <ul class="dropdown-menu">
                                                @*<li><a href="typography.html">Typography</a></li>
                                                    <li><a href="table.html">Table</a></li>*@
                                                @{
                                                    if (Model != null && Model.Any())
                                                    {
                                                        foreach (var p in Model)
                                                        {
                                                            <li><a href="#">@p.CategoryName</a></li>
                                                        }

                                                    }
                                                }
                                            </ul>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">DỰ ÁN</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">GIỚI THIỆU</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">TIN TỨC</a>
                                        </li>
                                        <li class="dropdown">
                                            <a href="#">LIÊN HỆ </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- end navigation -->
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- end header -->
        <div class="container">
            <div class="row">
                Danh mục sản phẩm
            </div>
        </div>
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <aside class="left-sidebar">
                            <div class="widget">
                                <form class="form-search">
                                    <input placeholder="Type something" type="text" class="input-medium search-query">
                                    <button type="submit" class="btn btn-square btn-theme">Search</button>
                                </form>
                            </div>
                            <div class="widget">
                                <h5 class="widgetheading">Categories</h5>
                                <ul class="cat">
                                    @{ if (Model != null && Model.Any())
                                     {
                                         foreach (var p in Model)
                                         {
                                            <li><i class="icon-angle-right"></i><a href="#">@p.CategoryName</a></li>
                                         }
                                     }
                                    }

                                </ul>
                            </div>
                        </aside>
                    </div>
                    <div class="col-md-9">
                        <div class="container">

                            @{
                                var getlistproduct = ViewBag.Product as IEnumerable<Web.Models.Product>;
                                if (getlistproduct != null && getlistproduct.Any())
                                {
                                    <div class="row">
                                        
                                        @foreach (var p in getlistproduct.Take(3))
                                        {
                                        <div class="col-md-4">
                                            <img src="@p.Image" class="img-responsive" />
                                        </div>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>

                </div>
            </div>

        </section>
        <footer>
