
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Share/_Admin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6" id="command">
        </div>
        <div class="col-md-6" id="command">
            <h4> Command</h4>
            <button type="button" class="btn btn-default" onclick="addpopup();">Thêm mới sản phẩm</button>
        </div>
    </div>
    <div class="row">
        <table id="myTable" class="table table-bordered table-hover" style="width: 100%;">
            <thead class="bg-danger">
                <tr>
                    <td style="width:8%">Mã dự án</td>
                    <td style="width:8%">Tên dự án</td>
                    <td style="width:25%">Ảnh</td>
                    <td style="width:8%">Mô tả ngắn gọn</td>
                    <td style="width:26%">Mô tả chi tiết</td>                    
                    <td style="width:25%"></td>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>

        </table>
        <!--modal-->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" style="width:60%">
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dismiss="modal">×</button>*@
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-envelope"></span> Thêm mới dự án</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="CustomerId">Mã dự án<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="CustomerId" placeholder="Mã dự án" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="CustomerName">Tên dự án<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="CustomerName" placeholder="Tên dự án" disabled="disabled" />
                        </div>

                        <div class="form-group">
                            <label for="CustomerImage">Ảnh<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="CustomerImage" placeholder="Ảnh" />
                        </div>

                        <div class="form-group">
                            <label for="CustomerDescription">Mô tả ngắn gọn<span class="labels">(*)</span></label>
                            <input type="text" class="form-control" id="CustomerDescription" placeholder="Mô tả ngắn gọn" />
                        </div>
                        <div class="form-group">
                            <label for="CustomerRemark">Mô tả chi tiết</label>
                            <textarea id="CustomerRemark" name="txtArea" class="ckeditor form-control" rows="2" cols="20" placeholder="Remarks"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();"><span class="glyphicon glyphicon-ok"></span> Thêm mới</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update()"><span class="glyphicon glyphicon-ok"></span> Cập nhật</button>
                        <button type="button" class="btn btn-danger btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Hủy bỏ</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Ket thuc modal-->
        <!-- model show content-->
        <div class="modal fade" id="modalshowcontent" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" style="width:80%">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modalshowcontentLabel"><span class="glyphicon glyphicon-th"></span> Nội dung chi tiết</h4>
                    </div>
                    <div class="modal-body">
                        <div id="modalshowcontent_body">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Ket thuc show content modal-->
    </div>
</div>
@section customerjs
{
    <script src="/admin_dist/js/customer.js"></script>
}




